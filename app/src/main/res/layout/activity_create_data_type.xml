<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListRecordTypes">

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/container2"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:hint="Data Type"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/create_data_type_edittext_datatype_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        app:boxStrokeColor="@color/cardview_dark_background" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/menu"
      style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:hint="Datatpre"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/create_data_type_btn_create">

    <AutoCompleteTextView
        android:id="@+id/datatype_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none" />

  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/create_data_type_btn_create"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:onClick="onClickCreateDataType"
      android:text="Create"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/container2" />

  <Button
      android:id="@+id/create_data_type_btn_configure"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="Configure"
      android:onClick="onClickConfigureDataType"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>